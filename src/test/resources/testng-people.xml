<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Engineer Test Suite" verbose="1">
    
    <!-- Smoke Tests Suite -->
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <packages>
            <package name="com.example.tests.testng.people"/>
        </packages>
    </test>

    <!-- Regression Tests Suite -->
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <packages>
            <package name="com.example.tests.testng.people"/>
        </packages>
    </test>

    <!-- All People Tests -->
    <test name="All People Tests">
        <groups>
            <run>
                <include name="people"/>
            </run>
        </groups>
        <packages>
            <package name="com.example.tests.testng.people"/>
        </packages>
    </test>

    <!-- Automated Engineer Tests Only -->
    <test name="Automated Engineer Tests">
        <groups>
            <run>
                <include name="automated"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.tests.testng.people.AutomatedEngineerTest"/>
        </classes>
    </test>

    <!-- Manual Engineer Tests Only -->
    <test name="Manual Engineer Tests">
        <groups>
            <run>
                <include name="manual"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.tests.testng.people.ManualEngineerTest"/>
        </classes>
    </test>

</suite>
