<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TestNG Suite" verbose="1">
    
    <!-- All People Tests -->
    <test name="People Tests">
        <classes>
            <class name="com.example.tests.testng.people.AutomatedEngineerTest"/>
            <class name="com.example.tests.testng.people.ManualEngineerTest"/>
            <class name="com.example.tests.testng.people.EngineerSuiteTest"/>
        </classes>
    </test>

    <!-- Smoke Tests Only -->
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <packages>
            <package name="com.example.tests.testng.people"/>
        </packages>
    </test>

    <!-- Regression Tests Only -->
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <packages>
            <package name="com.example.tests.testng.people"/>
        </packages>
    </test>
    
</suite>
